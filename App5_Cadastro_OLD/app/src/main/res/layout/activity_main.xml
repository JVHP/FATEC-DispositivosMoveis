<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadastre-se!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/Titulo"
            app:layout_constraintVertical_bias="0.064" app:layout_constraintHorizontal_bias="0.498"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tirar Foto"
            android:id="@+id/btnCamera"
            app:layout_constraintTop_toBottomOf="@+id/Titulo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.445"/>
    <ImageView
            android:layout_width="230dp"
            android:layout_height="200dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/FotoLinda"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnCamera"
            app:layout_constraintTop_toBottomOf="@+id/Titulo"
            android:rotation="-90"/>
    <EditText
            android:layout_width="281dp"
            android:layout_height="47dp"
            android:id="@+id/txtNome"
            android:inputType="text"
            android:hint="Seu Nome"
            app:layout_constraintTop_toBottomOf="@+id/btnCamera"
            app:layout_constraintBottom_toTopOf="@+id/txtIdade"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <EditText
            android:layout_width="281dp"
            android:layout_height="47dp"
            android:id="@+id/txtIdade"
            android:inputType="number"
            android:hint="Sua Idade"
            app:layout_constraintTop_toBottomOf="@+id/txtNome"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadastrar"
            android:id="@+id/btnSalvar"
            app:layout_constraintTop_toBottomOf="@+id/txtIdade"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>